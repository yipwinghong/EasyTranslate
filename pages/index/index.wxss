/**index.wxss**/

view {
  font-size: 30rpx;
}

view.change {
  color: #8995a1;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

view.change .icon-right {
  color: #888;
}

view.change .icon-down {
  color: #8995a1;
}

view.inputArea {
  padding: 20rpx;
  min-height: 80rpx;
  position: relative;
  background-color: white;
}

view.inputArea textarea {
  background-color: white;
}

view.inputArea .icon-close {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

view.resultArea {
  background-color: white;
  padding: 20rpx;
  min-height: 400rpx;
  border-top: 10rpx #f5fafe solid;
}

view.resultTitle {
  color: #8995a1;
  margin-bottom: 20rpx;
}